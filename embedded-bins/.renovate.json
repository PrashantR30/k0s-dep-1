{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base",
      ":dependencyDashboard"
    ],
    "enabledManagers": ["regex"],
    "regexManagers": [
      {
        "fileMatch": [
          "^embedded-bins/.*Makefile$",
          "^embedded-bins/.*\\.mk$",
          "^embedded-bins/versions\\.txt$"
        ],
        "matchStrings": [
          "# renovate: datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s.*?VERSION\\s*[:=]\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?",
          "^(?<depName>[^=]+)_VERSION\\s*[:=]\\s*[\"']?(?<currentValue>[^\"'\\s]+)[\"']?"
        ],
        "datasourceTemplate": "github-releases",
        "versioningTemplate": "semver",
        "extractVersionTemplate": "^v?(?<version>.*)$"
      }
    ],
    "packageRules": [
      {
        "description": "Group all embedded binary updates together per major version",
        "matchPaths": ["embedded-bins/**"],
        "groupName": "embedded-binaries",
        "groupSlug": "embedded-bins",
        "separateMajorMinor": true,
        "separateMinorPatch": false
      }
    ],
    "postUpgradeTasks": {
      "commands": [
        "cd embedded-bins && make all"
      ],
      "fileFilters": ["embedded-bins/**"]
    },
    "prBodyTemplate": "{{{header}}}\n\nUpdates the following embedded binaries:\n\n{{{table}}}\n\n### Release Notes\n\n{{{notes}}}",
    "commitMessagePrefix": "feat(embedded-bins):",
    "commitBody": "Updates embedded binaries to their latest compatible versions",
    "prConcurrentLimit": 2,
    "prHourlyLimit": 1,
    "dependencyDashboard": true,
    "dependencyDashboardTitle": "Embedded Binaries Update Dashboard",
    "branchPrefix": "renovate/embedded-bins/",
    "labels": ["dependencies", "embedded-bins"],
  }